<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.belal.weatherdemo.view.list_cities.CityListActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_cities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView


        android:id="@+id/text_no_cities"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/no_city"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar

        android:id="@+id/progress_cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/text_no_cities"
        app:layout_constraintEnd_toEndOf="@+id/text_no_cities"
        app:layout_constraintStart_toStartOf="@+id/text_no_cities"
        app:layout_constraintTop_toTopOf="@+id/text_no_cities" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.983" />


</android.support.constraint.ConstraintLayout>
